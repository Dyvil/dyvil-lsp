{
  "$schema": "https://raw.githubusercontent.com/wraith13/vscode-schemas/master/en/latest/schemas/vscode-extensions.json",
  "name": "dyvil-vscode",
  "publisher": "dyvil",
  "author": {
    "name": "Adrian Kunz",
    "email": "clashsoft@hotmail.com"
  },
  "version": "0.0.4",
  "main": "./main.js",
  "engines": {
    "vscode": "^1.69.0"
  },
  "scripts": {
    "vscode:prepublish": "cpx ../language-server/main.js ./server/"
  },
  "contributes": {
    "commands": [
      {
        "command": "dyvil.restart",
        "title": "Restart Dyvil Language Server"
      }
    ],
    "languages": [
      {
        "id": "dyvil",
        "aliases": [
          "Dyvil"
        ],
        "extensions": [
          ".dyv"
        ]
      }
    ],
    "grammars": [
      {
        "language": "dyvil",
        "scopeName": "source.dyvil",
        "path": "./assets/dyvil.tmGrammar.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Dyvil",
      "properties": {
        "dyvil.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "configurationDefaults": {
    "[dyvil]": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "activationEvents": [
    "onLanguage:dyvil"
  ]
}
