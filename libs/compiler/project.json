{
  "name": "compiler",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/compiler/src",
  "projectType": "library",
  "targets": {
    "antlr4ts": {
      "command": "antlr4ts -visitor -no-listener -o parser Dyvil.g4",
      "options": {
        "cwd": "libs/compiler/src"
      },
      "inputs": [
        "{projectRoot}/src/Dyvil.g4"
      ],
      "outputs": [
        "{projectRoot}/src/parser/**"
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/compiler/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/compiler/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
